{
    // run src/index.ts using tsx
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/src/index.ts",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true
        }
    ]
}